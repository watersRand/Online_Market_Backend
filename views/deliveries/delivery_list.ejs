<h1 class="text-3xl font-bold text-gray-800 mb-6">
    <%= typeof isMyDeliveries !=='undefined' && isMyDeliveries ? 'My Deliveries' : 'All Deliveries' %>
</h1>

<div class="flex justify-between items-center mb-6">
    <% if (typeof user !=='undefined' && user.roles.includes('Admin')) { %>
        <a href="/api/deliveries/deliveries/assign" class="btn btn-primary px-4 py-2">Assign New Delivery</a>
        <% } %>
            <% if (typeof user !=='undefined' && user.isDeliveryPerson) { %>
                <a href="/api/deliveries/deliveries/my-deliveries"
                    class="btn <%= typeof isMyDeliveries !== 'undefined' && isMyDeliveries ? 'btn-primary' : 'btn-secondary' %> px-4 py-2">View
                    My Deliveries</a>
                <a href="/api/deliveries/deliveries"
                    class="btn <%= typeof isMyDeliveries !== 'undefined' && isMyDeliveries ? 'btn-secondary' : 'btn-primary' %> px-4 py-2">View
                    All Deliveries</a>
                <% } %>
</div>

<% if (typeof deliveries !=='undefined' && deliveries.length> 0) { %>
    <div class="bg-white p-6 card overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="table-header">
                <tr>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID
                    </th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer
                    </th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Delivery
                        Person</th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status
                    </th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Assigned
                        Date</th>
                    <th scope="col" class="relative px-6 py-3">
                        <span class="sr-only">Actions</span>
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% deliveries.forEach(delivery=> { %>
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            <%= delivery.order ? delivery.order._id : 'N/A' %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                            <%= delivery.order && delivery.order.user ? delivery.order.user.name : 'N/A' %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                            <%= delivery.deliveryPerson ? delivery.deliveryPerson.name : 'N/A' %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <span class="status-badge status-<%= delivery.status.toLowerCase().replace(' ', '-') %>">
                                <%= delivery.status %>
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= new Date(delivery.assignmentDate).toLocaleDateString() %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="/api/deliveries/deliveries/<%= delivery._id %>"
                                class="text-indigo-600 hover:text-indigo-900 mr-4">View Details</a>
                            <% if (typeof user !=='undefined' && (user.roles.includes('Admin') || (user.isDeliveryPerson
                                && delivery.deliveryPerson &&
                                delivery.deliveryPerson._id.toString()===user._id.toString()))) { %>
                                <!-- No direct edit link here, updates happen on detail page -->
                                <% } %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    <% } else { %>
        <div class="text-center text-gray-600 py-12 bg-white card">
            <p class="text-xl mb-4">No deliveries found.</p>
            <% if (typeof user !=='undefined' && user.roles.includes('Admin')) { %>
                <a href="/api/deliveries/deliveries/assign" class="btn btn-primary inline-block">Assign Your First
                    Delivery</a>
                <% } %>
        </div>
        <% } %>