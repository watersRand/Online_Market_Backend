<h1 class="text-3xl font-bold text-gray-800 mb-6">Manage Vendors</h1>

<div class="flex justify-end items-center mb-6">
    <% if (typeof user !=='undefined' && user.roles.includes('Admin')) { %>
        <a href="/vendors/create" class="btn btn-primary px-4 py-2">Create New Vendor</a>
        <% } %>
</div>

<% if (typeof vendors !=='undefined' && vendors.length> 0) { %>
    <div class="bg-white p-6 card overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="table-header">
                <tr>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vendor
                        Name</th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Owner
                        Name</th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Owner
                        Email</th>
                    <th scope="col" class="relative px-6 py-3">
                        <span class="sr-only">Actions</span>
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% vendors.forEach(vendor=> { %>
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            <%= vendor.name %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                            <%= vendor.owner ? vendor.owner.name : 'N/A' %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                            <%= vendor.owner ? vendor.owner.email : 'N/A' %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="/vendors/<%= vendor._id %>"
                                class="text-indigo-600 hover:text-indigo-900 mr-4">View</a>
                            <% if (typeof user !=='undefined' && user.roles.includes('Admin')) { %>
                                <a href="/vendors/edit/<%= vendor._id %>"
                                    class="text-blue-600 hover:text-blue-900 mr-4">Edit</a>
                                <form action="/vendors/<%= vendor._id %>?_method=DELETE" method="POST"
                                    class="inline-block"
                                    onsubmit="return confirm('Are you sure you want to delete this vendor? This will also unlink the owner and may affect associated products.');">
                                    <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                                </form>
                                <% } %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    <% } else { %>
        <div class="text-center text-gray-600 py-12 bg-white card">
            <p class="text-xl mb-4">No vendors found.</p>
            <% if (typeof user !=='undefined' && user.roles.includes('Admin')) { %>
                <a href="/vendors/create" class="btn btn-primary inline-block">Create Your First Vendor</a>
                <% } %>
        </div>
        <% } %>