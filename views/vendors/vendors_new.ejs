<div class="container mx-auto px-4 w-full max-w-2xl">
    <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">
        <%= typeof vendor !=='undefined' && vendor ? 'Edit Vendor' : 'Create New Vendor' %>
    </h1>

    <%- messages() %> <!-- Display flash messages -->

        <div class="bg-white p-8 card max-w-2xl mx-auto">
            <form
                action="<%= typeof vendor !== 'undefined' && vendor ? '/api/vendors/' + vendor._id + '?_method=PUT' : '/api/vendors' %>"
                method="POST">

                <div class="mb-4">
                    <label for="name" class="block text-gray-700 font-medium mb-2">Vendor Name</label>
                    <input type="text" id="name" name="name" class="form-input"
                        value="<%= typeof vendor !== 'undefined' && vendor ? vendor.name : '' %>" required>
                </div>

                <div class="mb-4">
                    <label for="description" class="block text-gray-700 font-medium mb-2">Description</label>
                    <textarea id="description" name="description" class="form-input h-24"
                        required><%= typeof vendor !== 'undefined' && vendor ? vendor.description : '' %></textarea>
                </div>

                <div class="mb-4">
                    <label for="address" class="block text-gray-700 font-medium mb-2">Address</label>
                    <input type="text" id="address" name="address" class="form-input"
                        value="<%= typeof vendor !== 'undefined' && vendor ? vendor.address : '' %>" required>
                </div>

                <div class="mb-4">
                    <label for="contactEmail" class="block text-gray-700 font-medium mb-2">Contact Email</label>
                    <input type="email" id="contactEmail" name="contactEmail" class="form-input"
                        value="<%= typeof vendor !== 'undefined' && vendor ? vendor.contactEmail : '' %>" required>
                </div>

                <div class="mb-4">
                    <label for="contactPhone" class="block text-gray-700 font-medium mb-2">Contact Phone</label>
                    <input type="tel" id="contactPhone" name="contactPhone" class="form-input"
                        value="<%= typeof vendor !== 'undefined' && vendor ? vendor.contactPhone : '' %>" required>
                </div>

                <div class="mb-6">
                    <label for="ownerId" class="block text-gray-700 font-medium mb-2">Owner (User ID)</label>
                    <input type="text" id="ownerId" name="ownerId" class="form-input"
                        value="<%= typeof vendor !== 'undefined' && vendor && vendor.owner ? vendor.owner._id : '' %>"
                        placeholder="Optional: User ID of the vendor owner">
                    <p class="text-sm text-gray-500 mt-1">Leave empty to unassign or assign later.</p>
                </div>

                <div class="flex justify-end space-x-4">
                    <a href="/api/vendors/vendors" class="btn-primary bg-gray-500 hover:bg-gray-600">Cancel</a>
                    <button type="submit" class="btn-primary">
                        <%= typeof vendor !=='undefined' && vendor ? 'Update Vendor' : 'Create Vendor' %>
                    </button>
                </div>
            </form>
        </div>
</div>