<header class="bg-white shadow-md py-4">
    <div class="container mx-auto px-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-indigo-600">MyShop</a>
        <nav>
            <ul class="flex space-x-6">
                <li><a href="/" class="text-gray-700 hover:text-indigo-600 font-medium">Home</a></li>
                <li><a href="/api/products/products"
                        class="text-gray-700 hover:text-indigo-600 font-medium">Products</a>
                </li>
                <li><a href="/api/orders/cart" class="text-gray-700 hover:text-indigo-600 font-medium">Cart (<%= typeof
                            cartItemCount !=='undefined' ? cartItemCount : 0 %>)</a></li>
                <% if (typeof user._id && user) { %>
                    <li><a href="/api/users/profile" class="text-gray-700 hover:text-indigo-600 font-medium">Profile</a>
                    </li>
                    <li><a href="/api/users/logout" class="text-gray-700 hover:text-indigo-600 font-medium">Logout</a>
                    </li>
                    <% } else { %>
                        <li><a href="/api/users/login" class="text-gray-700 hover:text-indigo-600 font-medium">Login</a>
                        </li>
                        <li><a href="/api/users/register"
                                class="text-gray-700 hover:text-indigo-600 font-medium">Register</a>
                        </li>
                        <% } %>
            </ul>
        </nav>
    </div>
</header>