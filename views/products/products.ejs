<div class="container mx-auto px-4 w-full max-w-7xl">
    <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">
        <%= title %>
    </h1>

    <!-- Search Bar -->
    <div class="mb-8 p-6 card">
        <form action="/products" method="GET" class="flex flex-col sm:flex-row gap-4 items-center">
            <input type="text" name="keyword" placeholder="Search products..." value="<%= keyword %>"
                class="form-input flex-grow rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <button type="submit" class="btn-primary w-full sm:w-auto">Search</button>
        </form>
    </div>

    <% if (products && products.length> 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% products.forEach(product=> { %>
                <div class="card p-6 flex flex-col items-center text-center">
                    <a href="/products/<%= product._id %>" class="block w-full">
                        <img src="<%= product.image || 'https://placehold.co/400x400/cccccc/333333?text=Product' %>"
                            alt="<%= product.name %>" class="w-full h-48 object-cover rounded-md mb-4 shadow-sm">
                    </a>
                    <h2 class="text-xl font-semibold text-gray-800 mb-2 truncate w-full">
                        <a href="/products/<%= product._id %>" class="hover:text-indigo-600">
                            <%= product.name %>
                        </a>
                    </h2>
                    <p class="text-2xl font-bold text-indigo-600 mb-3">$<%= product.price.toFixed(2) %>
                    </p>
                    <p class="text-gray-600 text-sm mb-1">Vendor: <%= product.vendorName %>
                    </p>
                    <p class="text-gray-600 text-sm mb-4">
                        Availability:
                        <% if (product.countInStock> 0) { %>
                            <span class="font-semibold text-green-600">In Stock</span> (<%= product.countInStock %>)
                                <% } else { %>
                                    <span class="font-semibold text-red-600">Out of Stock</span>
                                    <% } %>
                    </p>

                    <div class="flex flex-col sm:flex-row gap-2 w-full mt-auto">
                        <form action="/cart/add" method="POST" class="flex-grow flex items-center justify-center">
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <label for="quantity-<%= product._id %>" class="sr-only">Quantity</label>
                            <input type="number" id="quantity-<%= product._id %>" name="quantity" value="1" min="1"
                                class="form-input w-16 text-center mr-2 rounded-md">
                            <button type="submit" class="btn-primary flex-grow" <%=product.countInStock===0 ? 'disabled'
                                : '' %>>
                                <%= product.countInStock===0 ? 'Out of Stock' : 'Add to Cart' %>
                            </button>
                        </form>

                        <% // Check if the user is a vendor and if their vendor ID matches the product's vendor ID const
                            isAuthorizedToEdit=user && user.roles==='Vendor' && user.vendor && product.vendor &&
                            product.vendor._id.toString()===user.vendor._id.toString(); %>
                            <% if (isAuthorizedToEdit) { %>
                                <a href="/products/edit/<%= product._id %>"
                                    class="btn-secondary w-full sm:w-auto text-center py-2 px-4 rounded-md">Edit</a>
                                <% } %>
                    </div>
                </div>
                <% }); %>
        </div>

        <!-- Basic Pagination (simplified for now) -->
        <div class="flex justify-center mt-12">
            <nav class="flex items-center space-x-2">
                <% if (page> 1) { %>
                    <a href="/products?page=<%= page - 1 %>&keyword=<%= keyword %>" class="btn-secondary">&laquo;
                        Previous</a>
                    <% } %>
                        <span class="px-4 py-2 rounded-md bg-indigo-500 text-white">Page <%= page %> of <%= pages %>
                                    </span>
                        <% if (page < pages) { %>
                            <a href="/products?page=<%= page + 1 %>&keyword=<%= keyword %>" class="btn-secondary">Next
                                &raquo;</a>
                            <% } %>
            </nav>
        </div>

        <% } else { %>
            <div class="text-center text-gray-600 py-12 bg-white card">
                <h1 class="text-3xl font-bold mb-4">No Products Found</h1>
                <p>There are currently no products available, or your search did not match any products.</p>
                <a href="/products" class="btn-primary mt-6 inline-block">Clear Search</a>
            </div>
            <% } %>
</div>