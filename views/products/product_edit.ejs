<div class="container mx-auto px-4 w-full max-w-2xl">
    <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">
        <%= typeof product !=='undefined' && product ? 'Edit Product' : 'Create New Product' %>
    </h1>

    <%- messages() %> <!-- Display flash messages -->

        <div class="bg-white p-8 card max-w-2xl mx-auto">
            <form
                action="<%= typeof product !== 'undefined' && product ? '/api/products/products/' + product._id + '?_method=PUT' : '/api/products/products/create' %>"
                method="POST">

                <div class="mb-4">
                    <label for="name" class="block text-gray-700 font-medium mb-2">Product Name</label>
                    <input type="text" id="name" name="name" class="form-input"
                        value="<%= typeof product !== 'undefined' && product ? product.name : '' %>" required>
                </div>

                <div class="mb-4">
                    <label for="description" class="block text-gray-700 font-medium mb-2">Description</label>
                    <textarea id="description" name="description" class="form-input h-24"
                        required><%= typeof product !== 'undefined' && product ? product.description : '' %></textarea>
                </div>

                <div class="mb-4">
                    <label for="price" class="block text-gray-700 font-medium mb-2">Price</label>
                    <input type="number" id="price" name="price" class="form-input" step="0.01"
                        value="<%= typeof product !== 'undefined' && product ? product.price : '' %>" required>
                </div>

                <div class="mb-4">
                    <label for="category" class="block text-gray-700 font-medium mb-2">Category</label>
                    <input type="text" id="category" name="category" class="form-input"
                        value="<%= typeof product !== 'undefined' && product ? product.category : '' %>" required>
                </div>

                <div class="mb-4">
                    <label for="countInStock" class="block text-gray-700 font-medium mb-2">Count In Stock</label>
                    <input type="number" id="countInStock" name="countInStock" class="form-input"
                        value="<%= typeof product !== 'undefined' && product ? product.countInStock : '' %>" required>
                </div>

                <div class="mb-6">
                    <label for="image" class="block text-gray-700 font-medium mb-2">Image URL</label>
                    <input type="text" id="image" name="image" class="form-input"
                        value="<%= typeof product !== 'undefined' && product ? product.image : '' %>"
                        placeholder="e.g., https://example.com/product.jpg">
                </div>

                <div class="flex justify-end space-x-4">
                    <a href="/api/products/products" class="btn-primary bg-gray-500 hover:bg-gray-600">Cancel</a>
                    <button type="submit" class="btn-primary">
                        <%= typeof product !=='undefined' && product ? 'Update Product' : 'Create Product' %>
                    </button>
                </div>
            </form>
        </div>
</div>