<h1 class="text-3xl font-bold text-gray-800 mb-6">All Services</h1>

<div class="flex justify-end items-center mb-6">
    <% if (typeof user !=='undefined' && user.roles.includes('Admin')) { %>
        <a href="/services/register" class="btn btn-primary px-4 py-2">Register New Service</a>
        <% } %>
</div>

<% if (typeof services !=='undefined' && services.length> 0) { %>
    <div class="bg-white p-6 card overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="table-header">
                <tr>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price
                    </th>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category
                    </th>
                    <th scope="col" class="relative px-6 py-3">
                        <span class="sr-only">Actions</span>
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% services.forEach(service=> { %>
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            <%= service.name %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">$<%= service.price.toFixed(2) %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                            <%= service.category || 'N/A' %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="/services/<%= service._id %>"
                                class="text-indigo-600 hover:text-indigo-900 mr-4">View</a>
                            <% if (typeof user !=='undefined' && user.roles.includes('Admin')) { %>
                                <a href="/services/edit/<%= service._id %>"
                                    class="text-blue-600 hover:text-blue-900 mr-4">Edit</a>
                                <form action="/services/<%= service._id %>?_method=DELETE" method="POST"
                                    class="inline-block"
                                    onsubmit="return confirm('Are you sure you want to delete this service?');">
                                    <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                                </form>
                                <% } %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    <% } else { %>
        <div class="text-center text-gray-600 py-12 bg-white card">
            <p class="text-xl mb-4">No services found.</p>
            <% if (typeof user !=='undefined' && user.roles.includes('Admin')) { %>
                <a href="/services/register" class="btn btn-primary inline-block">Register Your First Service</a>
                <% } %>
        </div>
        <% } %>