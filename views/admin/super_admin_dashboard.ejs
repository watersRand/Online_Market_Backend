<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Admin Dashboard</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
            /* Light gray background */
        }

        .card {
            border-radius: 0.75rem;
            /* rounded-xl */
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            /* shadow-md */
        }

        .table-header {
            background-color: #f9fafb;
            /* gray-50 */
        }

        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            /* rounded-full */
            font-size: 0.75rem;
            /* text-xs */
            font-weight: 600;
            /* font-semibold */
        }

        .status-approved {
            background-color: #d1fae5;
            color: #065f46;
        }

        /* green-100, green-800 */
        .status-pending {
            background-color: #fef3c7;
            color: #92400e;
        }

        /* yellow-100, yellow-800 */
        .status-processing {
            background-color: #bfdbfe;
            color: #1e40af;
        }

        /* blue-100, blue-800 */
        .status-shipped {
            background-color: #e0e7ff;
            color: #4338ca;
        }

        /* indigo-100, indigo-800 */
        .status-delivered {
            background-color: #d1fae5;
            color: #065f46;
        }

        /* green-100, green-800 */
        .status-cancelled {
            background-color: #fee2e2;
            color: #991b1b;
        }

        /* red-100, red-800 */
        .status-completed {
            background-color: #d1fae5;
            color: #065f46;
        }

        /* green-100, green-800 */
        .status-resolved {
            background-color: #d1fae5;
            color: #065f46;
        }

        /* green-100, green-800 */
        .status-open {
            background-color: #fef3c7;
            color: #92400e;
        }

        /* yellow-100, yellow-800 */
        .status-closed {
            background-color: #fee2e2;
            color: #991b1b;
        }

        /* red-100, red-800 */
    </style>
</head>

<body class="flex flex-col min-h-screen">

    <!-- Header (Optional - you can include your main layout header here) -->
    <header class="bg-white shadow-md py-4 mb-8">
        <div class="container mx-auto px-4 flex justify-between items-center">
            <h1 class="text-3xl font-bold text-indigo-600">Super Admin Dashboard</h1>
            <nav>
                <ul class="flex space-x-6">
                    <li><a href="/" class="text-gray-700 hover:text-indigo-600 font-medium">Home</a></li>
                    <li><a href="/admin/products" class="text-gray-700 hover:text-indigo-600 font-medium">Manage
                            Products</a></li>
                    <li><a href="/admin/users" class="text-gray-700 hover:text-indigo-600 font-medium">Manage Users</a>
                    </li>
                    <li><a href="/admin/orders" class="text-gray-700 hover:text-indigo-600 font-medium">Manage
                            Orders</a></li>
                    <li><a href="/api/users/logout" class="text-gray-700 hover:text-indigo-600 font-medium">Logout</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 py-8">
        <!-- Overview Statistics -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white p-6 card flex flex-col items-center justify-center text-center">
                <h2 class="text-lg font-semibold text-gray-600 mb-2">Total Users</h2>
                <p class="text-5xl font-extrabold text-indigo-600">
                    <%= dashboardData.totalUsers %>
                </p>
            </div>
            <div class="bg-white p-6 card flex flex-col items-center justify-center text-center">
                <h2 class="text-lg font-semibold text-gray-600 mb-2">Total Products</h2>
                <p class="text-5xl font-extrabold text-indigo-600">
                    <%= dashboardData.totalProducts %>
                </p>
            </div>
            <div class="bg-white p-6 card flex flex-col items-center justify-center text-center">
                <h2 class="text-lg font-semibold text-gray-600 mb-2">Total Orders</h2>
                <p class="text-5xl font-extrabold text-indigo-600">
                    <%= dashboardData.totalOrders %>
                </p>
            </div>
            <div class="bg-white p-6 card flex flex-col items-center justify-center text-center">
                <h2 class="text-lg font-semibold text-gray-600 mb-2">Total Sales Volume</h2>
                <p class="text-5xl font-extrabold text-green-600">$<%= dashboardData.totalSales.toFixed(2) %>
                </p>
            </div>
        </div>

        <!-- Distribution Charts/Tables -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <!-- Order Status Distribution -->
            <div class="bg-white p-6 card">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Order Status Distribution</h2>
                <ul class="space-y-2">
                    <% if (dashboardData.orderStatusDistribution && dashboardData.orderStatusDistribution.length> 0) {
                        %>
                        <% dashboardData.orderStatusDistribution.forEach(status=> { %>
                            <li class="flex justify-between items-center text-gray-700">
                                <span class="capitalize">
                                    <%= status._id %>:
                                </span>
                                <span class="font-bold">
                                    <%= status.count %>
                                </span>
                            </li>
                            <% }); %>
                                <% } else { %>
                                    <p class="text-gray-600">No order status data available.</p>
                                    <% } %>
                </ul>
            </div>

            <!-- Complaint Statistics -->
            <div class="bg-white p-6 card">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Complaint Statistics</h2>
                <ul class="space-y-2">
                    <% if (dashboardData.complaintStats && dashboardData.complaintStats.length> 0) { %>
                        <% dashboardData.complaintStats.forEach(stat=> { %>
                            <li class="flex justify-between items-center text-gray-700">
                                <span class="capitalize">
                                    <%= stat._id %>:
                                </span>
                                <span class="font-bold">
                                    <%= stat.count %>
                                </span>
                            </li>
                            <% }); %>
                                <% } else { %>
                                    <p class="text-gray-600">No complaint data available.</p>
                                    <% } %>
                </ul>
            </div>

            <!-- Delivery Status Distribution -->
            <div class="bg-white p-6 card">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Delivery Status Distribution</h2>
                <ul class="space-y-2">
                    <% if (dashboardData.deliveryStatusDistribution && dashboardData.deliveryStatusDistribution.length>
                        0) { %>
                        <% dashboardData.deliveryStatusDistribution.forEach(status=> { %>
                            <li class="flex justify-between items-center text-gray-700">
                                <span class="capitalize">
                                    <%= status._id %>:
                                </span>
                                <span class="font-bold">
                                    <%= status.count %>
                                </span>
                            </li>
                            <% }); %>
                                <% } else { %>
                                    <p class="text-gray-600">No delivery status data available.</p>
                                    <% } %>
                </ul>
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="bg-white p-6 card mb-8">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Recent Orders</h2>
            <% if (dashboardData.recentOrders && dashboardData.recentOrders.length> 0) { %>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="table-header">
                            <tr>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Order ID</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Customer</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Total Amount</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Status</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Date</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% dashboardData.recentOrders.forEach(order=> { %>
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        <%= order._id %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        <%= order.user ? order.user.name : 'N/A' %> (<%= order.user ? order.user.email
                                                : 'N/A' %>)
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">$<%=
                                            order.totalAmount.toFixed(2) %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <span
                                            class="status-badge status-<%= order.status.toLowerCase().replace(' ', '-') %>">
                                            <%= order.status %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <%= new Date(order.createdAt).toLocaleDateString() %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <p class="text-gray-600">No recent orders to display.</p>
                    <% } %>
        </div>

        <!-- Top Selling Products -->
        <div class="bg-white p-6 card">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Top Selling Products</h2>
            <% if (dashboardData.topSellingProducts && dashboardData.topSellingProducts.length> 0) { %>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="table-header">
                            <tr>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Product Name</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Category</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Quantity Sold</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Total Revenue</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% dashboardData.topSellingProducts.forEach(product=> { %>
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        <%= product.product %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        <%= product.category || 'N/A' %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        <%= product.totalQuantitySold %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">$<%=
                                            product.totalRevenue.toFixed(2) %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <p class="text-gray-600">No top selling products to display.</p>
                    <% } %>
        </div>
    </main>

    <!-- Footer (Optional - you can include your main layout footer here) -->
    <footer class="bg-gray-800 text-white py-6 mt-8">
        <div class="container mx-auto px-4 text-center">
            <p>&copy; <%= new Date().getFullYear() %> Admin Panel. All rights reserved.</p>
        </div>
    </footer>

</body>

</html>