<div class="container mx-auto px-4 w-full max-w-6xl">
    <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">
        <%= title %>
    </h1>

    <%- messages() %> <!-- Display flash messages -->

        <% if (users && users.length> 0) { %>
            <div class="card p-8">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    ID</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Name</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Email</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Roles</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Vendor</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% users.forEach(u=> { %>
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        <%= u._id %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        <%= u.name %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        <%= u.email %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        <% if (Array.isArray(u.roles)) { %>
                                            <%= u.roles.join(', ') %>
                                        <% } else { %>
                                            <%= u.roles || ' Customer' %>
                                                <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        <%= u.vendor ? u.vendor.name : 'N/A' %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <!-- Example: Edit User (you'd need a separate route/form for this) -->
                                        <a href="/admin/users/<%= u._id %>/edit"
                                            class="text-indigo-600 hover:text-indigo-900 mr-4">Edit</a>
                                        <!-- Example: Delete User (using method-override) -->
                                        <form action="/api/users/<%= u._id %>?_method=DELETE" method="POST"
                                            class="inline-block"
                                            onsubmit="return confirm('Are you sure you want to delete this user? This cannot be undone.');">
                                            <button type="submit" class="btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
            <% } else { %>
                <div class="card p-8 text-center text-gray-600">
                    <p class="text-xl mb-4">No users found.</p>
                </div>
                <% } %>
</div>