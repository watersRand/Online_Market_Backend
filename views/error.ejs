<div class="text-center py-16">
    <h1 class="text-4xl font-bold text-red-600 mb-4">Error!</h1>
    <p class="text-xl text-gray-700 mb-8">
        <%= typeof message !=='undefined' ? message : 'Something went wrong.' %>
    </p>
    <% if (typeof error !=='undefined' && error) { %>
        <p class="text-red-500 mb-8">
            <%= error %>
        </p>
        <% } %>
            <a href="/" class="btn btn-primary px-6 py-3 text-lg">Go to Homepage</a>
</div>